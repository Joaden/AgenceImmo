{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.firstname) }}</div>
    <div class="col-md-4">{{ form_row(form.lastname) }}</div>
    <div class="col-md-4">{{ form_row(form.street) }}</div>
</div>
<div class="row">
<div class="col-md-2">{{ form_row(form.cp) }}</div>
<div class="col-md-2">{{ form_row(form.city) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}